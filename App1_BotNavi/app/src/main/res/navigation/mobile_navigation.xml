<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_indoor">

    <fragment
        android:id="@+id/navigation_indoor"
        android:name="com.example.app1_botnavi.ui.indoor.IndoorFragment"
        android:label="@string/title_indoor"
        tools:layout="@layout/fragment_indoor" />

    <fragment
        android:id="@+id/navigation_outdoor"
        android:name="com.example.app1_botnavi.ui.outdoor.OutdoorFragment"
        android:label="@string/title_outdoor"
        tools:layout="@layout/fragment_outdoor" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.app1_botnavi.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>